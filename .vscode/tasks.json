{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build: WARDIAL",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/d",
        "/c",
        "call \"${workspaceFolder}\\env.cmd\" && call \"${workspaceFolder}\\build.cmd\""
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": [],
      "presentation": { "reveal": "always", "panel": "shared", "clear": true }
    },
    {
      "label": "Run: WARDIAL (build first)",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/d",
        "/c",
        "call \"${workspaceFolder}\\env.cmd\" && call \"${workspaceFolder}\\build.cmd\" && call \"${workspaceFolder}\\run.cmd\""
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "test",
      "problemMatcher": [],
      "presentation": { "reveal": "always", "panel": "shared", "clear": false }
    }
  ]
}
